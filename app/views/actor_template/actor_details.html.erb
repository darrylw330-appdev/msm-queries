<h1> Actor #<%= @actor.id %> details </h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/504" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @actor.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.created_at) %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.updated_at) %>
  </dd>
</dl>

<h2>Filmography</h2>
<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>
  <tr>
    <% @character.each do |character| %>
    <td>
      <% movie = Movie.where({ :id => character.movie_id }).at(0) %>
      <%= movie.title%>
    </td>
    <td>
      <% year = Movie.where({ :id => character.movie_id }).at(0) %>
      <%= movie.year %>
    </td>
    <td>
      <% director = Director.where({ :id => character.movie_id }).at(0) %>
      <%= director.name %>
    </td>
    <td>
      <%= character.name%>
    </td>
    <td>
      <a href="/movies/<%= character.id %>">
        Show details
    </td>
  </tr>
  <%end%>
</table>
